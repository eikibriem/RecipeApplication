<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recipe_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.helen_000.recipeapplication.Activities.RecipeGroupActivity">

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mButtonAppetizers"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="mButtonAppetizersButtonOnClick"/>

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mButtonBaking"
        android:layout_below="@+id/mButtonAppetizers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="mButtonBakingButtonOnClick"/>

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mButtonBreakfast"
        android:layout_below="@+id/mButtonBaking"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="mButtonBreakfastButtonOnClick"/>

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mButtonDinner"
        android:layout_below="@+id/mButtonBreakfast"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="mButtonDinnerButtonOnClick"/>

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mButtonDessert"
        android:layout_below="@+id/mButtonDinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="mButtonDessertButtonOnClick"/>


    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mButtonRaw"
        android:layout_below="@+id/mButtonDessert"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="mButtonRawButtonOnClick"/>

</RelativeLayout>
